{
  "name": "@adonisjs/encore",
  "description": "Webpack Encore plugin for Adonis.js",
  "version": "0.0.1-1",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/stubs",
    "build/configure.js",
    "build/configure.d.ts",
    "build/index.js",
    "build/index.d.ts",
    "build/src",
    "build/services",
    "build/providers"
  ],
  "exports": {
    ".": "./build/index.js",
    "./services/main": "./build/services/encore.js",
    "./providers/encore_provider": "./build/providers/encore_provider.js",
    "./types": "./build/src/types/main.js",
    "./types/extended": "./build/src/types/extended.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --loader=ts-node/esm bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "compile": "npm run lint && npm run clean && tsc && npm run copy:templates",
    "build": "npm run compile",
    "postbuild": "npm run copy:templates",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.1.5-8",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@adonisjs/view": "7.0.0-2",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@japa/assert": "2.0.0-1",
    "@japa/expect-type": "2.0.0-0",
    "@japa/file-system": "2.0.0-1",
    "@japa/runner": "3.0.0-6",
    "@poppinss/dev-utils": "^2.0.3",
    "@swc/core": "^1.3.69",
    "@types/node": "^20.4.2",
    "c8": "^8.0.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@poppinss/utils": "^6.5.0-3",
    "edge-error": "^3.0.0",
    "stringify-attributes": "^4.0.0"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-8",
    "@adonisjs/view": "7.0.0-2"
  },
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "keywords": [
    "webpack",
    "encore",
    "adonisjs"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
